<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Welcome to Currency Converter!"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"/>
    <EditText
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editAmount"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="164dp" android:hint="00.00"/>
    <Spinner
            android:layout_width="133dp"
            android:layout_height="30dp"
            android:id="@+id/spinner" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"/>
    <Spinner
            android:layout_width="133dp"
            android:layout_height="30dp"
            android:id="@+id/spinner2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="228dp"/>
    <TextView
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="125dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"/>
    <TextView
            android:text="To"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="258dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="239dp"/>
    <TextView
            android:text="From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="258dp"/>
    <Button
            android:text="Convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="480dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp"/>
    <TextView
            android:layout_width="310dp"
            android:id="@+id/message"
            android:layout_height="61dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="408dp"
            android:layout_marginStart="84dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>